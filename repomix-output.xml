    private function determinePrimaryStatus($statuses)
    {
        $statusPriority = [
            'pending' => 1,
            'partially_approved' => 2,
            'approved' => 3,
            'rejected' => 4,
            'cancelled' => 5
        ];
    
        return collect($statuses)->sort(function ($a, $b) use ($statusPriority) {
            return ($statusPriority[$a] ?? 6) - ($statusPriority[$b] ?? 6);
        })->first();
    }

