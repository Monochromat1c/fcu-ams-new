            'assets' => $assets,
            'assignee' => $assignee,
            'currentDate' => $currentDate,
            'totalValue' => $totalValue
        ]);

        $fileName = "assigned_assets_" . str_replace(' ', '_', strtolower($assignee)) . "_" . Carbon::now()->format('Y-m-d') . ".pdf";
        return $pdf->download($fileName);
    }
