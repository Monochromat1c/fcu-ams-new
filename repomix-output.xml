    public function generateQrCode($id)
    {
        $asset = Asset::findOrFail($id);

        $assetData = [
            'tag_id' => $asset->asset_tag_id,
            'assigned_to' => $asset->assigned_to ?? 'Not Assigned',
            'specs' => $asset->specs,
            'brand' => $asset->brand->brand,
